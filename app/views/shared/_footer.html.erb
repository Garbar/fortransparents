<!-- Page Footer-->
<footer class="main-footer">
  <div class="container">
    <div class="row">
      <div class="col-md-4">
        <div class="logo">
          <h6 class="text-white"><%= t('front.title_site') %></h6>
        </div>
        <div class="contact-details">
          <p>53 Broadway, Broklyn, NY 11249</p>
          <p>Phone: (020) 123 456 789</p>
          <p>Email: <a href="mailto:info@company.com">Info@Company.com</a></p>
          <ul class="social-menu">
            <li class="list-inline-item"><a href="#"><i class="fa fa-facebook"></i></a></li>
            <li class="list-inline-item"><a href="#"><i class="fa fa-twitter"></i></a></li>
            <li class="list-inline-item"><a href="#"><i class="fa fa-instagram"></i></a></li>
            <li class="list-inline-item"><a href="#"><i class="fa fa-behance"></i></a></li>
            <li class="list-inline-item"><a href="#"><i class="fa fa-pinterest"></i></a></li>
          </ul>
        </div>
      </div>
      <div class="col-md-4">
        <div class="menus d-flex">
          <ul class="list-unstyled">
            <li><%= link_to t('menu.article'), articles_path %></li>
            <li><%= link_to t('menu.story'), stories_path %></li>
            <li><%= link_to t('menu.video'), videos_path %></li>
            <li><%= link_to t('menu.contact'), new_contact_path %></li>
          </ul>
        </div>
      </div>
      <div class="col-md-4">
        <div class="latest-posts">
          <% @last_articles.each do |story| %>
            <%= link_to(story) do %>
              <div class="item d-flex align-items-center">
                <div class="image">
                  <%= image_tag(story.image_url, class: "img-fluid") if story.image? %>
                </div>  
                <div class="title"><strong><%= story.title %></strong>
                    <span class="date last-meta"><%= story.published_at.strftime('%d %B | %Y') %></span>
                </div>
              </div>
            <% end %>
          <% end %>
      </div>
    </div>
  </div>
  <div class="copyrights">
    <div class="container">
      <div class="row">
        <div class="col-md-6">
          <p>&copy; 2017. All rights reserved. <%= t('front.title_site') %>.</p>
        </div>
        <div class="col-md-6 text-right">
        </div>
      </div>
    </div>
  </div>
</footer>